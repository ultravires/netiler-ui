.nt-button
  border: 1px solid transparent
  padding: $--padding-vertical $--padding-horizontal
  cursor: pointer
  &.is-round
    border-radius: $--border-radius-round
  &.is-circle
    padding: $--padding-vertical
    border-radius: $--border-radius-circle

.nt-button--primary
  background-color: $--button-primary-color
  border-color: $--button-primary-color
  color: $--color-white
  &:hover
    background-color: $--button-hover-primary-color

.nt-button--default
  background-color: $--button-default-color
  border-color: $--button-default-color
  color: $--color-black
  line-height: 1
  &:hover
    background-color: $--button-hover-default-color
    border-color: $--button-primary-color
    color: $--button-primary-color

.nt-button--success
  background-color: $--button-success-color
  border-color: $--button-success-color
  color: $--color-white
  &:hover
    background-color: $--button-hover-success-color

.nt-button--info
  background-color: $--button-info-color
  border-color: $--button-info-color
  color: $--color-white
  &:hover
    background-color: $--button-hover-info-color

.nt-button--warning
  background-color: $--button-warning-color
  border-color: $--button-warning-color
  color: $--color-white
  &:hover
    background-color: $--button-hover-warning-color

.nt-button--danger
  background-color: $--button-danger-color
  border-color: $--button-danger-color
  color: $--color-white
  &:hover
    background-color: $--button-hover-danger-color