.nt-button
  display: inline-block
  padding: $--padding-middle-half $--padding-middle
  border: 1px solid transparent
  border-radius: $--border-radius-small;
  cursor: pointer
  line-height: 1
  &.is-round
    border-radius: $--border-radius-round
  &.is-circle
    padding: $--padding-middle-half
    border-radius: $--border-radius-circle

.nt-button--default
  background-color: $--button-default-color
  border-color: $--button-default-color
  color: $--color-black
  &:hover
    background-color: $--button-default-hover-color
    border-color: $--button-primary-color
    color: $--button-primary-color
  &.is-plain
    background-color: $--plain-button-default-color
    border-color: $--plain-button-default-hover-color
    color: $--color-black
    &:hover
      background-color: $--plain-button-default-hover-color
      border-color: $--button-primary-color
      color: $--button-primary-color
  &.is-ghost
    background-color: transparent

