.nt-message
  position: fixed
  padding: 10px 20px
  border-radius: 6px
  transition: opacity 0.3s, transform .4s, top 0.4s
  &.nt-message--success
    background-color: #e1f3d8
    color: #67c23a
  &.nt-message--info
    background-color: rgba(0, 0, 0, .6)
    color: #fff
  &.nt-message--warning
    background-color: #faecd8
    color: #e6a23c
  &.nt-message--error
    background-color: #fde2e2
    color: #f56c6c

.nt-message--top
  left: 50%
  transform: translateX(-50%)

.nt-message--right
  top: 100px

.nt-message-slide-fade-top-enter,
.nt-message-slide-fade-top-leave-active
  opacity: 0
  transform: translate(-50%, -100%)

.nt-message-slide-fade-right-enter
  opacity: 0
  top: 90%
  transform: translate(100%, -100%)  
.nt-message-slide-fade-right-leave-active
  opacity: 0
  transform: translate(100%, -100%)
