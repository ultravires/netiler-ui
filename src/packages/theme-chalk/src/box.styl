.nt-box
  position: relative
  display: inline-flex
  flex-direction: column
  border-radius: $--border-radius-small
  vertical-align: bottom
  overflow: hidden

.nt-box__header
  position: sticky
  display: flex
  justify-content: space-between
  align-items: center
  padding-left: 10px
  padding-right: 10px

.nt-box__content
  padding: 10px
  height: 100%
  overflow: auto
