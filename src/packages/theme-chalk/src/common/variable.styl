/* Typography
-------------------------- */
$--font-path = 'fonts' !default;


/* Colors
-------------------------- */
$--color-white = #fff;
$--color-black = #000;

$--color-success = #67c23a;
$--color-info = #909399;
$--color-warning = #e6a23c;
$--color-danger = #f56c6c;
$--color-error = #f56c6c;

$--color-success-light = lighten($--color-success, 80%);
$--color-info-light = lighten($--color-info, 80%);
$--color-warning-light = lighten($--color-warning, 80%);
$--color-danger-light = lighten($--color-danger, 80%);
$--color-error-light = lighten($--color-error, 80%);